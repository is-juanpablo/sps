        <servlet-name>HistorialServlet</servlet-name>
        <url-pattern>/HistorialServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParqueaderosServlet</servlet-name>
        <url-pattern>/ParqueaderosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioServlet</servlet-name>
        <url-pattern>/InicioServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
