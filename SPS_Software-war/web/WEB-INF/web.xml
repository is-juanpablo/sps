<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.sps.software.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.sps.software.servlet.RegistroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeleccionServlet</servlet-name>
        <servlet-class>com.sps.software.servlet.SeleccionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservaServlet</servlet-name>
        <servlet-class>com.sps.software.servlet.ReservaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SalirServlet</servlet-name>
        <servlet-class>com.sps.software.servlet.SalirServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistorialServlet</servlet-name>
        <servlet-class>com.sps.software.servlet.HistorialServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParqueaderosServlet</servlet-name>
        <servlet-class>com.sps.software.servlet.ParqueaderosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InicioServlet</servlet-name>
        <servlet-class>com.sps.software.servlet.InicioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParqueaderoIndividualServlet</servlet-name>
        <servlet-class>com.sps.software.servlet.ParqueaderoIndividualServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReporteServlet</servlet-name>
        <servlet-class>com.sps.software.servlet.ReporteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/ingresar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeleccionServlet</servlet-name>
        <url-pattern>/seleccion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservaServlet</servlet-name>
        <url-pattern>/reservar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SalirServlet</servlet-name>
        <url-pattern>/salir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistorialServlet</servlet-name>
        <url-pattern>/historial</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParqueaderosServlet</servlet-name>
        <url-pattern>/parqueaderos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioServlet</servlet-name>
        <url-pattern>/inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParqueaderoIndividualServlet</servlet-name>
        <url-pattern>/parqueadero</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReporteServlet</servlet-name>
        <url-pattern>/reportes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
